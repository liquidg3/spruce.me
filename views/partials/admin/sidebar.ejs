<div id="sidebar">
    <!-- Wrapper for scrolling functionality -->
    <div id="sidebar-scroll">
        <!-- Sidebar Content -->
        <div class="sidebar-content">
            <!-- Brand -->
            <a href="#/admin/dashboard" class="sidebar-brand">
                <i class="gi gi-flash"></i>
                <span class="sidebar-nav-mini-hide"><strong>Spruce</strong> Admin</span>
            </a>
            <!-- END Brand -->

            <!-- User Info -->
            <div class="sidebar-section sidebar-user clearfix sidebar-nav-mini-hide">
                <div class="sidebar-user-avatar">
                    <img ng-src="/v1/images/thumb?file={{ user.image.relative }}&w=64&h=64" alt="avatar">
                </div>
                <div class="sidebar-user-name">Hey <b>{{ user.name }}</b></div>
                <div class="sidebar-user-links">
                    <a href="javascript:void(0);" ng-click="editProfile();" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Profile"><i class="gi gi-user"></i></a>
                    <a href="/admin/logout" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Logout"><i class="gi gi-exit"></i></a>
                </div>
            </div>
            <!-- END User Info -->


            <!-- Sidebar Navigation -->
            <ul class="sidebar-nav">
                <li>
                    <a ng-class="{ active: $route.current.originalPath == '/admin/dashboard'}" href="#/admin/dashboard"><i class="gi gi-stopwatch sidebar-nav-icon"></i> <span class="sidebar-nav-mini-hide">Dashboard</span></a>
                </li>
                <li>
                    <a ng-class="{ active: $route.current.originalPath == '/admin/users'}" href="#/admin/users"><i class="gi gi-user sidebar-nav-icon"></i> <span class="sidebar-nav-mini-hide">Users</span></a>
                </li>
                <li class="sidebar-header">
                    <span class="sidebar-header-title">Selfie Review</span>
                </li>
                <li>
                    <a  ng-class="{ active: $route.current.originalPath == '/admin/selfie/consultants'}" href="#/admin/selfie/consultants"><i class="gi gi-user sidebar-nav-icon"></i> <span class="sidebar-nav-mini-hide">Consultants</span></a>
                </li>
                <li>
                    <a  ng-class="{ active: $route.current.originalPath == '/admin/selfie/dashboard'}" href="#/admin/selfie/messages"><i class="gi gi-user sidebar-nav-icon"></i> <span class="sidebar-nav-mini-hide">Messages</span></a>
                </li>

            </ul>
            <!-- END Sidebar Navigation -->


        </div>
        <!-- END Sidebar Content -->
    </div>
    <!-- END Wrapper for scrolling functionality -->
</div>