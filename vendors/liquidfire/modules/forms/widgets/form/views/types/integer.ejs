<div class="form-group <%= className %>">

    <label for="<%= name %>" class="property-label"><%= options.label %></label>
    <input <%- attributes %> type="text" class="form-control" name="<%= name %>" value="<%= value %>">

    <% if (options.description) { %>
        <p class="help-block"><%= options.description %></p>
    <% } %>

</div>